<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        tools:ignore="DataExtractionRules,MissingApplicationIcon">

        <activity
            android:name=".activity.AssistantActivity"
            android:exported="true"
            android:icon="@mipmap/ic_assistant"
            android:label="Assistant"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/Theme.SamsungShortcuts">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SmartViewActivity"
            android:exported="true"
            android:icon="@mipmap/ic_smartview"
            android:label="Smart View"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:theme="@style/Theme.SamsungShortcuts">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LinkTrampolineActivity"
            android:exported="true"
            android:label="Trampoline"
            android:icon="@mipmap/ic_smartview"
            android:theme="@style/Theme.SamsungShortcuts">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>

    </application>

</manifest>